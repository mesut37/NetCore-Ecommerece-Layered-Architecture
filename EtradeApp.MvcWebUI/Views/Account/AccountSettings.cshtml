@model EtradeApp.MvcWebUI.Models.AccountSettingsViewModel
@{
    ViewData["Title"] = "AccountSettings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ana Sayfa</font></font></a></li>
                    <li class="breadcrumb-item active"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Hesap Ayarları</font></font></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="content-wraper">
    <div class="container">
        <div class="account-dashboard mtb-60">

            <div class="row">
                <div class="col-md-12 col-lg-2">
                    <!-- Nav tabs -->
                    <account-list page-name="@Context.Request.Path"></account-list>


                </div>
                <div class="col-md-12 col-lg-10">
                    <!-- Tab panes -->
                    <div id="account-details" class="tab-pane fade active show">
                        <h3>Fatura Bilgilerim</h3>
                        <div class="login">
                            <div class="login-form-container">
                                <div class="account-login-form">
                                    <form asp-controller="Account" method="post">
                                        <p class="single-form-row">
                                            <label>
                                                <label>Email</label><br />
                                                <span asp-validation-for="Email"></span>
                                            </label>
                                            <input type="text" asp-for="Email" />
                                        </p>
                                        <p class="single-form-row">
                                            <label>
                                                <label>Kullanıcı Adı</label><br />
                                                <span asp-validation-for="UserName"></span>
                                            </label>
                                            <input type="text" asp-for="UserName" />
                                        </p>
                                        <p class="single-form-row">
                                            <label>
                                                <label>Telefon</label><br />
                                                <span asp-validation-for="Phone"></span>
                                            </label>
                                            <input type="text" asp-for="Phone" />
                                        </p>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="button-box">
                                            <button type="submit" class="default-btn">Güncelle</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>