@model EtradeApp.MvcWebUI.Models.LoginViewModel
@{
    ViewData["Title"] = "LoginUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="breadcrumb-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb-list">
                    <li class="breadcrumb-item"><a href="index.html">Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">Giriş Yap / Üye Ol</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="content-wraper login-register-area bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="customer-login-register">
                    <h3>Giriş Yap </h3>
                    @if (Context.Request.Query["ReturnUrl"] == "/Cart/ShippingDetails")
                    {
                        <h6><a style="color:#E64545;" href="/Cart/WithOutShipping">Giriş yapmadan devam et</a> </h6>
                    }
                    <div class="login-Register-info">
                        <form asp-controller="Account" method="post" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                            <p class="coupon-input form-row-first">
                                <label>
                                    <label>Kullanıcı Adı</label>
                                    <span asp-validation-for="UserName"></span>
                                </label>
                                <input type="text" asp-for="UserName" />

                            </p>
                            <p class="coupon-input form-row-last">
                                <label>
                                    <label>Şifre</label>
                                    <span asp-validation-for="Password"></span>
                                </label>
                                <input type="password" asp-for="Password" />
                            </p>
                            <div class="clear"></div>
                            <p>
                                <button value="Login" name="login" class="button-login" type="submit">Giriş Yap</button>
                                <label><input type="checkbox" asp-for="RememberMe"><span>Beni hatırla</span></label>
                                <a href="#" class="lost-password">Şifremi unuttum ?</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

