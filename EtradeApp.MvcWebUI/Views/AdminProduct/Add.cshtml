@model EtradeApp.MvcWebUI.Models.ProductAddViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";



}

<link rel="stylesheet" href="/admin/vendor/spinkit/css/spinkit.css">
<script src="/js/vendor/jquery.min.js"></script>
<script src="~/js/vendor/jquery.unobtrusive-ajax.min.js"></script>
<style>
    .field-validation-error {
        color: red;
        font-size: 12px;
    }

    .input-validation-error {
        border: 1px solid red;
    }
</style>

<script>

    var results = $("#Results");
    var onBegin = function () {

        $("#add").addClass("d-none");
        $("#loading").removeClass("d-none");

    };

    var onComplete = function () {
        results.html("bitti");
    };

    var onSuccess = function (context) {
        $("#add").removeClass("d-none");
        $("#loading").addClass("d-none");
    };

    var onFailed = function (context) {
        alert("hatalı");
    };
</script>



<section class="section-container">
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Yeni Ürün Ekle</div>
        <form class="card" asp-controller="AdminProduct" asp-action="Add" data-ajax-begin="onBegin" data-ajax-complete="onComplete"
              data-ajax-failure="onFailed" data-ajax-success="onSuccess"
              data-ajax="true" data-ajax-method="POST">
            <div class="ie-fix-flex" role="tabpanel">
                <ul class="nav nav-tabs nav-justified">
                    <li class="nav-item" role="presentation"><a class="nav-link active" href="#edit" aria-controls="edit" role="tab" data-toggle="tab">Genel</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#seo" aria-controls="seo" role="tab" data-toggle="tab">Diğer</a></li>
                    <li class="nav-item" role="presentation"><a class="nav-link" href="#picture" aria-controls="picture" role="tab" data-toggle="tab">Pictures</a></li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="edit" role="tabpanel">
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Ürün Adı</label>
                                <div class="col-lg-10">
                                    <input asp-for="Product.ProductName" class="form-control" type="text" placeholder="Ürün Adı">
                                    <span asp-validation-for="Product.ProductName"></span>
                                </div>

                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group row mb-2">
                                <label class="col-md-2 col-form-label mb-2">Kategorisi</label>
                                <div id="selectBlock" class="col-md-10">
                                    <select class="form-control" id="select2-1" asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))">
                                        <option value="" hidden disabled selected>Seçiniz..</option>
                                      
                                    </select>
                                    <span asp-validation-for="Product.CategoryId"></span>

                                </div>
                            </div>
                        </fieldset>
                       
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Fiyatı</label>
                                <div class="col-lg-10">
                                    <input asp-for="Product.UnitPrice" class="form-control" value="" type="text" >
                                    <span asp-validation-for="Product.UnitPrice"></span>
                                </div>

                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Stok</label>
                                <div class="col-lg-10">
                                    <input asp-for="Product.UnitsInStock" value="" class="form-control" type="number">
                                    <span asp-validation-for="Product.UnitsInStock"></span>
                                </div>

                            </div>
                        </fieldset>

                    </div>
                    <div class="tab-pane" id="seo" role="tabpanel">
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Sıra</label>
                                <div class="col-lg-10">
                                    <input asp-for="Product.Sequance" class="form-control" type="number">
                                    <span asp-validation-for="Product.Sequance"></span>
                                </div>

                            </div>
                        </fieldset>

                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Aktiflik Durumu</label>
                                <div class="col-md-10"><label class="switch"><input type="checkbox" asp-for="Product.Status" checked="checked"><span></span></label></div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Ana Sayfada Göster</label>
                                <div class="col-md-10"><label class="switch"><input type="checkbox" asp-for="Product.IsMain"><span></span></label></div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="form-group row">
                                <label class="col-lg-2 col-form-label">Açıklama</label>
                                <div class="col-lg-10"><textarea class="form-control" asp-for="Product.Details" rows="5" placeholder="Maksimum 1000 karakter..."></textarea></div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="tab-pane" id="picture" role="tabpanel">
                        <div class="row mb-3">
                            <div class="col-3"><strong>Preview</strong></div>
                            <div class="col-9"><strong>Details</strong></div>
                        </div>
                        <div class="row mb-3 pb-3 bb">
                            <div class="col-6 col-md-3"><a href="#" title="Product 1"><img class="img-fluid" src="img/bg7.jpg" alt="Product 1"></a></div>
                            <div class="col-6 col-md-9">
                                <fieldset>
                                    <div class="form-group row"><input class="form-control" type="text" placeholder="Brief description.."></div>
                                </fieldset>
                                <p><strong>Picture type</strong></p>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod1-pic" value="option1" checked=""><span></span>Primary</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod1-pic" value="option2"><span></span>Thumbnail</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod1-pic" value="option3"><span></span>Gallery</label></div>
                                <div class="text-right"><button class="btn btn-sm btn-danger" type="button"><em class="fa fa-times-circle fa-fw"></em>Remove</button></div>
                            </div>
                        </div>
                        <div class="row mb-3 pb-3 bb">
                            <div class="col-6 col-md-3"><a href="#" title="Product 2"><img class="img-fluid" src="img/bg8.jpg" alt="Product 1"></a></div>
                            <div class="col-6 col-md-9">
                                <fieldset>
                                    <div class="form-group row"><input class="form-control" type="text" placeholder="Brief description.."></div>
                                </fieldset>
                                <p><strong>Picture type</strong></p>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod2-pic" value="option1" checked=""><span></span>Primary</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod2-pic" value="option2"><span></span>Thumbnail</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod2-pic" value="option3"><span></span>Gallery</label></div>
                                <div class="text-right"><button class="btn btn-sm btn-danger" type="button"><em class="fa fa-times-circle fa-fw"></em>Remove</button></div>
                            </div>
                        </div>
                        <div class="row mb-3 pb-3">
                            <div class="col-6 col-md-3"><a href="#" title="Product 3"><img class="img-fluid" src="img/bg10.jpg" alt="Product 1"></a></div>
                            <div class="col-6 col-md-9">
                                <fieldset>
                                    <div class="form-group row"><input class="form-control" type="text" placeholder="Brief description.."></div>
                                </fieldset>
                                <p><strong>Picture type</strong></p>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod3-pic" value="option1" checked=""><span></span>Primary</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod3-pic" value="option2"><span></span>Thumbnail</label></div>
                                <div class="c-radio c-radio-nofont"><label><input type="radio" name="prod3-pic" value="option3"><span></span>Gallery</label></div>
                                <div class="text-right"><button class="btn btn-sm btn-danger" type="button"><em class="fa fa-times-circle fa-fw"></em>Remove</button></div>
                            </div>
                        </div>
                    </div>

                    <div class="text-right mt-3">
                        <button class="btn btn-success" id="add" type="submit">Ekle</button>

                    </div>
                    <div class="sk-wave d-none" id="loading">
                        <div class="sk-rect sk-rect1"></div>
                        <div class="sk-rect sk-rect2"></div>
                        <div class="sk-rect sk-rect3"></div>
                        <div class="sk-rect sk-rect4"></div>
                        <div class="sk-rect sk-rect5"></div>
                    </div>
                </div>

            </div>

        </form>

    </div>
</section>