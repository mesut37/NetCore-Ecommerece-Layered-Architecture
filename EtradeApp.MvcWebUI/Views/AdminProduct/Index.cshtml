@model EtradeApp.MvcWebUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="section-container">
    <!-- Page content-->
    <div class="content-wrapper">
        <div class="content-heading">Ürünler</div>
        <table class="table table-striped table-hover w-100" id="datatable1">
            <thead>
                <tr>
                    <th style="width:80px"><strong>ID</strong></th>
                    <th><strong>Ürün</strong></th>
                    <th><strong>Kategorisi</strong></th>
                    <th><strong>Fiyat</strong></th>
                    <th style="width:80px"><strong>Stok</strong></th>
                    <th style="width:80px"><strong>Sıra</strong></th>
                    <th class="text-center"><strong>Durumu</strong></th>
                    <th class="text-center"><strong>İşlem</strong></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Category.CategoryName</td>
                    <td>@product.UnitPrice</td>
                    <td>@if (product.UnitsInStock > 0){<span class="badge badge-success">Stokta Var</span>}
                        else {<span class="badge badge-danger">Stokta Yok</span> }</td>
                    <td>@product.Sequance</td>
                    <td class="text-center">@((product.Status) ? "Aktif" : "Pasif")  </td>
                    <td class="text-center">
                        <a asp-controller="AdminProduct" asp-action="Update" asp-route-productId="@product.ProductId" class="btn btn-sm btn-info mr-2 command-edit" data-row-id="10253"><em class="fa fa-edit fa-fw"></em></a>
                        <a asp-controller="AdminProduct" asp-action="Delete" asp-route-productId="@product.ProductId" class="btn btn-sm btn-danger command-delete" data-row-id="10253"><em class="fa fa-trash fa-fw"></em></a>
                    </td>

                </tr>
                }

            </tbody>
           
        </table>
    </div>
</section>

<script src="/admin/vendor/jquery/dist/jquery.js"></script>