@model EtradeApp.MvcWebUI.Models.CartListViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="breadcrumb-area bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb-list">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Shopping Cart</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="content-wraper bg-gray">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="#" class="cart-table mt-60">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>

                                        <th class="plantmore-product-thumbnail">Ürün Resmi</th>
                                        <th class="cart-product-name">Ürün Adı</th>
                                        <th class="plantmore-product-price">Fiyat</th>
                                        <th class="plantmore-product-quantity">Adet</th>
                                        <th class="plantmore-product-subtotal">Toplam</th>
                                        <th class="plantmore-product-remove">Sil</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Cart.CartLines)
                                    {
                                        <tr>

                                            <td class="plantmore-product-thumbnail"><a href="#"><img src="~/Uploads/Products/@product.PhotoUrl" width="150" alt=""></a></td>
                                            <td class="plantmore-product-name"><a href="#">@product.Product.ProductName</a></td>
                                            <td class="plantmore-product-price"><span class="amount">@product.Product.UnitPrice</span></td>
                                            <td class="plantmore-product-quantity">
                                                <input value="@product.Quantity" type="number">
                                            </td>
                                            <td class="product-subtotal"><span class="amount">@(product.Product.UnitPrice * @product.Quantity)</span></td>
                                            <td class="plantmore-product-remove"><a href="/Cart/Remove?productId=@product.Product.ProductId"><i class="fa fa-times"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                @*<div class="coupon-all">
                                    <div class="coupon">
                                        <input id="coupon_code" class="input-text" name="coupon_code" value="" placeholder="Coupon code" type="text">
                                        <input class="button" name="apply_coupon" value="Apply coupon" type="submit">
                                    </div>
                                    <div class="coupon2">
                                        <input class="button" name="update_cart" value="Update cart" type="submit">
                                    </div>
                                </div>*@
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Sepet Toplamı</h2>
                                    <ul>
                                        <li>Toplam <span>@Model.Cart.Total</span></li>
                                    </ul>
                                    <a asp-controller="Cart" asp-action="ShippingDetails"><i class="fas fa-credit-card"></i> Ödeme Yap</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>