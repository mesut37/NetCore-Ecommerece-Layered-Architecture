@model EtradeApp.MvcWebUI.Models.CartSummaryViewModel

<div class="col-lg-6 col-sm-12">
    <div class="checkout-review-order">
        <form action="#">
            <h3 class="shoping-checkboxt-title"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Siparişiniz</font></font></h3>
            <table class="checkout-review-order-table">
                <thead>
                    <tr>
                        <th class="t-product-name"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ürün</font></font></th>
                        <th class="product-total"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Genel Toplam</font></font></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Cart.CartLines)
                    {
                        <tr class="cart_item">
                            <td class="t-product-name">
                                <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@product.Product.ProductName </font></font><strong class="product-quantity">
                                    <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">× @product.Quantity</font></font>
                                </strong>
                            </td>
                            <td class="t-product-price"><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@(product.Product.UnitPrice * product.Quantity)</font></font></span></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="shipping">
                        <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nakliye</font></font></th>
                        <td><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ücretsiz kargo</font></font></td>
                    </tr>
                    <tr class="order-total">
                        <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Genel Toplam</font></font></th>
                        <td><strong><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@Model.Cart.Total</font></font></span></strong></td>
                    </tr>
                </tfoot>
            </table>
            <div class="checkout-payment">
                <div class="payment_methods">
                    <p><label><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">PayPal Ekspres Satın Alma </font></font><a href="#"><img src="img/icon/pp-acceptance-small.png" alt=""></a></label></p>
                    <p><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">PayPal ile öde; </font><font style="vertical-align: inherit;">PayPal hesabınız yoksa, kredi kartınızla ödeme yapabilirsiniz.</font></font></p>
                </div>

            </div>
        </form>
    </div>
</div>